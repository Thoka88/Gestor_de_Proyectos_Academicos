@model List<GestorAcademicoEntities.Tarea>

@{
    ViewData["Title"] = "Mis tareas del proyecto";
    int idProyecto = ViewBag.IdProyecto;
    int idCurso = ViewBag.IdCurso;   // 👈 agregamos esto para reutilizarlo abajo
}

<div class="container mt-4">

    <h2 class="mb-3">Mis tareas en el proyecto</h2>
    <hr />

    <!-- FORMULARIO: Crear nueva tarea -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            Crear nueva tarea
        </div>
        <div class="card-body">
            <form asp-action="AgregarTarea" method="post">
                <input type="hidden" name="Id_Proyecto" value="@idProyecto" />
                <input type="hidden" name="idCurso" value="@idCurso" />   @* 👈 IMPORTANTE *@

                <div class="mb-3">
                    <label class="form-label">Título</label>
                    <input type="text" name="Titulo_Tarea" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Descripción</label>
                    <textarea name="Descripcion_Tarea" class="form-control" rows="3" required></textarea>
                </div>

                <div class="mb-3">
                    <label class="form-label">Fecha límite</label>
                    <input type="date" name="Fecha_Finalizacion" class="form-control" required />
                </div>

                <input type="hidden" name="Estado_Tarea" value="Pendiente" />

                <button type="submit" class="btn btn-success">
                    <i class="bi bi-plus-circle"></i> Guardar tarea
                </button>
            </form>
        </div>
    </div>

    <!-- LISTA DE TAREAS -->
    <div class="card">
        <div class="card-header bg-secondary text-white">
            Mis tareas en este proyecto
        </div>

        <div class="card-body p-0">
            @if (Model != null && Model.Any())
            {
                <table class="table table-striped table-bordered mb-0">
                    <thead>
                        <tr>
                            <th>Título</th>
                            <th>Descripción</th>
                            <th>Estado</th>
                            <th>Fecha límite</th>
                            <th style="width:220px;">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var t in Model)
                        {
                            <tr>
                                <td>@t.Titulo_Tarea</td>
                                <td>@t.Descripcion_Tarea</td>
                                <td>@t.Estado_Tarea</td>
                                <td>@t.Fecha_Finalizacion.ToShortDateString()</td>

                                <td>
                                    <!-- FORM: Cambiar estado -->
                                    <form asp-action="EditarTarea" method="post" style="display:inline;">
                                        <input type="hidden" name="Id_Tarea" value="@t.Id_Tarea" />
                                        <input type="hidden" name="Id_Proyecto" value="@t.Id_Proyecto" />
                                        <input type="hidden" name="idCurso" value="@idCurso" />   @* 👈 aquí también *@

                                        <select name="Estado_Tarea" class="form-select form-select-sm d-inline-block w-auto">
                                            <option value="Pendiente" selected="@(t.Estado_Tarea == "Pendiente")">Pendiente</option>
                                            <option value="En progreso" selected="@(t.Estado_Tarea == "En progreso")">En progreso</option>
                                            <option value="Completada" selected="@(t.Estado_Tarea == "Completada")">Completada</option>
                                        </select>

                                        <button type="submit" class="btn btn-primary btn-sm ms-1">Guardar</button>
                                    </form>

                                    <!-- FORM: Eliminar tarea -->
                                    <form asp-action="EliminarTarea" method="post" style="display:inline;">
                                        <input type="hidden" name="idTarea" value="@t.Id_Tarea" />
                                        <input type="hidden" name="idProyecto" value="@t.Id_Proyecto" />
                                        <input type="hidden" name="idCurso" value="@idCurso" />   @* 👈 y aquí también *@

                                        <button type="submit" class="btn btn-danger btn-sm ms-1">
                                            Eliminar
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="p-3">
                    <div class="alert alert-info mb-0">
                        Aún no has creado tareas en este proyecto.
                    </div>
                </div>
            }
        </div>
    </div>

    <a asp-action="VistaProyectosEstudiante"
       asp-route-idCurso="@idCurso"
       class="btn btn-outline-secondary mt-3">
        Volver a mis proyectos
    </a>

</div>
